.main
  display: flex
  flex-direction: column
  flex-grow: 1
  padding: 10px

.main__description
  padding: 10px
  border: 2px solid black

.main__container
  display: flex
  justify-content: space-between
  flex-grow: 1
  padding: 10px 0

.main__content
  flex-grow: 1
  max-width: "calc(100% - %s - 10px)" % (main-aside-width)

.main__aside
  position: sticky
  top: header-height
  width: main-aside-width
  align-self: flex-start
  flex-shrink: 0
  min-height: 500px
  padding: 10px
  background-color: violet
  border: 2px solid black
  transition-duration: 0.5s
  
  &::before
  &::after
    content: ""
    display: table